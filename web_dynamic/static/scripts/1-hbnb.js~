// $(".popover input:checkbox").css('margin-right', '10px');
$("document").ready(() => {
    let selected = {};
    // add listener to input of type checkbox
    
    $("input:checkbox").on("change", () => {
	if ($(this).is(":checked")){
	    selected[`${$(this).attr("data-id")}`] =
		$(this).attr("data-name");
	} else {
	    delete selected[`${$(this).attr("data-id")}`];
	}
	console.log("selected: ",selected);
	let list = "";
	for (let value of Object.values(selected)){
	    console.log("value: ",value);
	    if (list.length) {
		list += ",";
	    }
	    list += value;
	}
	$("div.amenities h4").html(`<p>${list}</p>`)
	console.log(list)
    })
})
